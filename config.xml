<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        xmlns:android   = "http://schemas.android.com/apk/res/android"
        id          = "org.dg.xcpmobile"
        versionCode = "10"
        version     = "1.1.0">

    <name>xCP Mobile</name>

    <description>
        xCP Mobile
    </description>

    <author href="http://www.emc.com" email="dominique.gallet@emc.com">
        Dominique Gallet
    </author>
    
    <gap:platform name="android" />
    
    <gap:config-file platform="android" parent="/manifest">
        <application android:debuggable="true" />
    </gap:config-file>
    
    
    <!-- Allonwing navigation here * but not a good practice -->
    <access origin="*" />

    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
    <feature name="http://api.phonegap.com/1.0/device" />
    
    <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
    <gap:plugin name="org.apache.cordova.camera" version="0.3.2" />
    <gap:plugin name="com.phonegap.plugins.barcodescanner" version="2.2.0" />

</widget>